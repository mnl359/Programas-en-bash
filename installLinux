#!/bin/bash

if [ -z "$*" ]; then
    echo -n "Para ver la ayuda use el parametro -h
"
elif [ $1 = "-i" ]; then
    echo "Para ejecutar este comando es necesario ser usuario root"
    echo -n "Desea continuar? [S,N]: "
    read RES
    if [ $RES = 'N' ] || [ $RES = 'n' ]; then
	echo "Vuelva a intentarlo cuando quiera" 1>&2
	exit 1
    else 
	if [ "$(id -u)" != "0" ]; then
    	    echo "No posee permisos de root" 1>&2
    	    exit 1
	else
	    sudo apt-get update
	    sudo apt-get upgrade
    	    sudo apt-get -y install subversion
    	    sudo apt-get -y install git-core
    	    sudo apt-get -y install emacs
    	    sudo apt-get -y install shutter
    	    sudo apt-get -y install gimp
    	    sudo apt-get -y install kolourpaint4
    	    sudo apt-get -y install gdebi
    	    sudo apt-get -y install vlc
    	    sudo apt-get -y install gcc
    	    sudo apt-get -y install g++
    	    sudo apt-get -y install dropbox
    	    sudo apt-get -y install skype
	    sudo apt-get -y install bleachbit
	    echo -n "Desea instalar Hazkell? [S,N]:"
	    read RESHAS
	    if [ $RESHAS = 's' ] || [ $RESHAS = 'S' ]; then
		sudo apt-get -y install alex
		sudo apt-get -y install happy
		sudo apt-get -y install cabal-install
		sudo apt-get -y install ghci
	    fi
	    echo -n "Desea instalar LaTeX? [S,N]:"
	    read RESLAT
	    if [ $RESLAT = 's' ] || [ $RESLAT = 'S' ]; then
		echo "Se tomara un tiempo mientras que se instala LaTeX"
		sudo apt-get -y install latex*
	    fi
	fi
    fi
else
    echo "Script para la instalacion de los siguientes programas:
-> subversion
-> git
-> emacs
-> shutter
-> gimp
-> kolourpaint
-> gdebi
-> vlc
-> gcc
-> g++
-> dropbox
-> skype
Bajo las opciones del usuario se podrían instalar Hazkell y Latex
Los parametros de ejecución son:
-> -i para realizar la instalación
-> -h para llamar la ayuda"
fi
